@model Navigation
@{
    var context = this.SitecoreContext();
    var dataExisting = Model != null && Model.NavigationItems != null && Model.NavigationItems.Any();
}

@if (!dataExisting && context.IsEditing)
{
    @Html.Raw("Breadcrumb Model is null")
}
else
{
    if (dataExisting)
    {
        <div class="breadcrumb">
            <ul>
                @foreach (var navigationItem in Model.NavigationItems ?? new List<NavigationItem>())
                {
                    <li>
                        <a class="@(navigationItem.IsActive ? "inactiveLink" : "")" isActive="@navigationItem.IsActive" href="@navigationItem.Url">@navigationItem.Title</a>
                    </li>
                }
            </ul>
        </div>
    }
}
