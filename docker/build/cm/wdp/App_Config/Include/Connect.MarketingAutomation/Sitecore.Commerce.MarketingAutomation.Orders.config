<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>

    <orderAutomationPlanCustomValueProvider type="Sitecore.Commerce.MarketingAutomation.Providers.OrderAutomationPlanCustomValuesProvider, Sitecore.Commerce.Connect.MarketingAutomation" singleInstance="true" />

    <pipelines>

      <commerce.orders.submitVisitorOrder>
        <processor type="Sitecore.Commerce.MarketingAutomation.Pipelines.Common.RemoveVisitorFromAutomationPlan, Sitecore.Commerce.Connect.MarketingAutomation">
          <basePlanName>Abandoned Cart</basePlanName>
        </processor>
        <processor type="Sitecore.Commerce.MarketingAutomation.Pipelines.Carts.Common.UpdateVisitorInAutomationPlan, Sitecore.Commerce.Connect.MarketingAutomation">
          <param ref="orderAutomationPlanCustomValueProvider" />
          <basePlanName>New Order Placed</basePlanName>
          <allowDuplicateContacts>true</allowDuplicateContacts>
          <allowUnauthenticatedContacts>true</allowUnauthenticatedContacts>
        </processor>
      </commerce.orders.submitVisitorOrder>

    </pipelines>
  </sitecore>
</configuration>
