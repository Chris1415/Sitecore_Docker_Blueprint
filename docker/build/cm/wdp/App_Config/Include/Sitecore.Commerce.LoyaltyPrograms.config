<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <!--  Commerce ENTITIES
          Contains all the Commerce loyalty program entities.
          The configuration can be used to substitute the default entity implementation with extended one.
    -->
    <commerce.Entities>
      <LoyaltyCard type="Sitecore.Commerce.Entities.LoyaltyPrograms.LoyaltyCard, Sitecore.Commerce.Connect.Core"/>
      <LoyaltyCardTier type="Sitecore.Commerce.Entities.LoyaltyPrograms.LoyaltyCardTier, Sitecore.Commerce.Connect.Core"/>
      <LoyaltyCardTransaction type="Sitecore.Commerce.Entities.LoyaltyPrograms.LoyaltyCardTransaction, Sitecore.Commerce.Connect.Core"/>
      <LoyaltyProgram type="Sitecore.Commerce.Entities.LoyaltyPrograms.LoyaltyProgram, Sitecore.Commerce.Connect.Core"/>
      <LoyaltyProgramStatus type="Sitecore.Commerce.Entities.LoyaltyPrograms.LoyaltyProgramStatus, Sitecore.Commerce.Connect.Core"/>
      <LoyaltyProgramSummary type="Sitecore.Commerce.Entities.LoyaltyPrograms.LoyaltyProgramSummary, Sitecore.Commerce.Connect.Core"/>
      <LoyaltyRewardPoint type="Sitecore.Commerce.Entities.LoyaltyPrograms.LoyaltyRewardPoint, Sitecore.Commerce.Connect.Core"/>
      <LoyaltyTier type="Sitecore.Commerce.Entities.LoyaltyPrograms.LoyaltyTier, Sitecore.Commerce.Connect.Core"/>
      <LoyaltyCardPaymentInfo type="Sitecore.Commerce.Entities.LoyaltyPrograms.LoyaltyCardPaymentInfo, Sitecore.Commerce.Connect.Core"/>
      <RewardPointType type="Sitecore.Commerce.Entities.LoyaltyPrograms.RewardPointType, Sitecore.Commerce.Connect.Core"/>
      <LoyaltyRewardPointEntryType type="Sitecore.Commerce.Entities.LoyaltyPrograms.LoyaltyRewardPointEntryType, Sitecore.Commerce.Connect.Core"/>
    </commerce.Entities>

    <!-- LOYALTY PROGRAM SERVICE PROVIDER 
         Defines the object which provides core loyalty program services.
         Default implementation simply calls corresponding pipelines.
    -->
    <loyaltyProgramServiceProvider type="Sitecore.Commerce.Services.LoyaltyPrograms.LoyaltyProgramServiceProvider, Sitecore.Commerce.Connect.Core" singleInstance="true" />

    <pipelines>
      <commerce.loyaltyPrograms.getLoyaltyPrograms>
      </commerce.loyaltyPrograms.getLoyaltyPrograms>

      <commerce.loyaltyPrograms.getLoyaltyProgram>
      </commerce.loyaltyPrograms.getLoyaltyProgram>

      <commerce.loyaltyPrograms.getLoyaltyProgramStatus>
      </commerce.loyaltyPrograms.getLoyaltyProgramStatus>

      <commerce.loyaltyPrograms.joinLoyaltyProgram>
        <processor type="Sitecore.Commerce.Pipelines.LoyaltyPrograms.JoinLoyaltyProgram.TriggerLoyaltyProgramJoinedGoal, Sitecore.Commerce.Connect.Core">
          <Name>Loyalty Program Joined</Name>
          <Text>Loyalty program has been joined.</Text>
        </processor>
      </commerce.loyaltyPrograms.joinLoyaltyProgram>

      <commerce.loyaltyPrograms.getLoyaltyCards>
      </commerce.loyaltyPrograms.getLoyaltyCards>

      <commerce.loyaltyPrograms.getLoyaltyCardTransactions>
      </commerce.loyaltyPrograms.getLoyaltyCardTransactions>

      <commerce.loyaltyPrograms.updateLoyaltyCardId>
      </commerce.loyaltyPrograms.updateLoyaltyCardId>
    </pipelines>

  </sitecore>
</configuration>