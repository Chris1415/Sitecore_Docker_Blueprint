<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:role="http://www.sitecore.net/xmlconfig/role/">
  <sitecore role:require="Standalone or ContentDelivery or ContentManagement">
    <commerce.Entities>
      <Party>
        <patch:attribute name="type">Sitecore.Commerce.Engine.Connect.Entities.CommerceParty, Sitecore.Commerce.Engine.Connect</patch:attribute>
      </Party>
      <ShippingMethodPerItem type="Sitecore.Commerce.Entities.Shipping.ShippingMethodPerItem, Sitecore.Commerce.Connect.Core" />
    </commerce.Entities>

    <pipelines>
      <commerce.shipping.getShippingOptions>
        <processor type="Sitecore.Commerce.Engine.Connect.Pipelines.Shipping.GetShippingOptions, Sitecore.Commerce.Engine.Connect">
          <param ref="entityFactory" />
        </processor>
      </commerce.shipping.getShippingOptions>

      <commerce.shipping.getShippingMethods>
        <processor type="Sitecore.Commerce.Engine.Connect.Pipelines.Shipping.GetShippingMethods, Sitecore.Commerce.Engine.Connect">
          <param ref="entityFactory" />
        </processor>
      </commerce.shipping.getShippingMethods>
    </pipelines>
  </sitecore>
</configuration>
