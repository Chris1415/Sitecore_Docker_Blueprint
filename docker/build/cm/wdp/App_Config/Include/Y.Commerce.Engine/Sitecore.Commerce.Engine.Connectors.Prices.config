<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/" xmlns:role="http://www.sitecore.net/xmlconfig/role/">
  <sitecore role:require="Standalone or ContentDelivery or ContentManagement">

    <pricingServiceProvider>
      <patch:attribute name="type">Sitecore.Commerce.Engine.Connect.Services.Prices.PricingServiceProvider, Sitecore.Commerce.Engine.Connect</patch:attribute>
    </pricingServiceProvider>

    <commerce.Entities>
      <ActionModelDefinition type="Sitecore.Commerce.Engine.Connect.Entities.ActionModelDefinition, Sitecore.Commerce.Engine.Connect"/>
      <ActionModelProperty type="Sitecore.Commerce.Engine.Connect.Entities.ActionModelProperty, Sitecore.Commerce.Engine.Connect"/>
      <Price>
        <patch:attribute name="type">Sitecore.Commerce.Engine.Connect.Entities.CommercePrice, Sitecore.Commerce.Engine.Connect</patch:attribute>
      </Price>
      <PromotionDefinition type="Sitecore.Commerce.Engine.Connect.Entities.PromotionDefinition, Sitecore.Commerce.Engine.Connect"/>
    </commerce.Entities>

    <pipelines>
      <commerce.prices.getProductPrices>
        <processor type="Sitecore.Commerce.Pipelines.Prices.GetProductPrices.GetProductPrices, Sitecore.Commerce.Connect.Core">
          <patch:delete />
        </processor>
        <processor type="Sitecore.Commerce.Engine.Connect.Pipelines.Prices.GetProductPrices, Sitecore.Commerce.Engine.Connect">
          <param ref="entityFactory" />
        </processor>
      </commerce.prices.getProductPrices>

      <commerce.prices.getProductBulkPrices>
        <processor type="Sitecore.Commerce.Pipelines.Prices.GetProductBulkPrices.GetProductBulkPrices, Sitecore.Commerce.Connect.Core">
          <patch:delete />
        </processor>
        <processor type="Sitecore.Commerce.Engine.Connect.Pipelines.Prices.GetProductBulkPrices, Sitecore.Commerce.Engine.Connect">
          <param ref="entityFactory" />
        </processor>
      </commerce.prices.getProductBulkPrices>

      <commerce.prices.getSupportedCurrencies>
        <processor type="Sitecore.Commerce.Pipelines.Prices.GetSupportedCurrencies.GetSupportedCurrencies, Sitecore.Commerce.Connect.Core">
          <patch:delete />
        </processor>
        <processor type="Sitecore.Commerce.Engine.Connect.Pipelines.Prices.GetSupportedCurrencies, Sitecore.Commerce.Engine.Connect">
          <param ref="entityFactory" />
        </processor>
      </commerce.prices.getSupportedCurrencies>
    </pipelines>
  </sitecore>
</configuration>
