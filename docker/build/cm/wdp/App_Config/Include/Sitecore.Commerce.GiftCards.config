<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <!--  Commerce ENTITIES
          Contains all the Commerce gift cards entities.
          The configuration can be used to substitute the default entity implementation with extended one.
    -->
    <commerce.Entities>
      <GiftCard type="Sitecore.Commerce.Entities.GiftCards.GiftCard, Sitecore.Commerce.Connect.Core"/>
      <GiftCardPaymentInfo type="Sitecore.Commerce.Entities.GiftCards.GiftCardPaymentInfo, Sitecore.Commerce.Connect.Core"/>
    </commerce.Entities>

    <!-- GIFT CARDS SERVICE PROVIDER 
         Defines the object which provides core gift cards services.
         Default implementation simply calls corresponding pipelines.
    -->
    <giftCardServiceProvider type="Sitecore.Commerce.Services.GiftCards.GiftCardServiceProvider, Sitecore.Commerce.Connect.Core" singleInstance="true" />

    <pipelines>
      <commerce.giftCards.getGiftCard>
      </commerce.giftCards.getGiftCard>
    </pipelines>

  </sitecore>
</configuration>