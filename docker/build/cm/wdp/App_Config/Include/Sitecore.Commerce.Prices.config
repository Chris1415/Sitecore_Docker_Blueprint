<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <!--  Commerce ENTITIES
          Contains all the Commerce price entities.
          The configuration can be used to substitute the default entity implementation with extended one.
    -->
    <commerce.Entities>
      <Price type="Sitecore.Commerce.Entities.Prices.Price, Sitecore.Commerce.Connect.Core" />
      <PriceCondition type="Sitecore.Commerce.Entities.Prices.PriceCondition, Sitecore.Commerce.Connect.Core" />
      <DatePriceCondition type="Sitecore.Commerce.Entities.Prices.DatePriceCondition, Sitecore.Commerce.Connect.Core" />
      <QuantityPriceCondition type="Sitecore.Commerce.Entities.Prices.QuantityPriceCondition, Sitecore.Commerce.Connect.Core" />
      <Total type="Sitecore.Commerce.Entities.Prices.Total, Sitecore.Commerce.Connect.Core" />
      <TaxTotal type="Sitecore.Commerce.Entities.Prices.TaxTotal, Sitecore.Commerce.Connect.Core" />
      <TaxSubtotal type="Sitecore.Commerce.Entities.Prices.TaxSubtotal, Sitecore.Commerce.Connect.Core" />
      <Promotion type="Sitecore.Commerce.Entities.Prices.Promotion, Sitecore.Commerce.Connect.Core" />
    </commerce.Entities>
    
    <!--  PRICING SERVICE PROVIDER
    -->
    <pricingServiceProvider type="Sitecore.Commerce.Services.Prices.PricingServiceProvider, Sitecore.Commerce.Connect.Core" singleInstance="true" />
    
    <pipelines>

      <!--  GET CART TOTAL
            Gets the totals object that matches the specified criteria.
            This pipeline is responsible for reading pricing data from a commerce system.
            This pipeline converts the contents of an Commerce cart into a format the commerce system can understand,
            requests the commerce system calculate the totals, and then converts the output into the proper Commerce format.
       -->
      <commerce.prices.getCartTotal>
        <processor type="Sitecore.Commerce.Pipelines.Prices.GetCartTotal.GetCartTotal, Sitecore.Commerce.Connect.Core" />
      </commerce.prices.getCartTotal>

      <!--  GET PRODUCT PRICES
            Gets the price object that matches the specified criteria.
            This pipeline is responsible for reading pricing data from a commerce system.
            This pipeline requests product pricing information from the commerce system and
            then converts the output into the proper Commerce format.
      -->
      <commerce.prices.getProductPrices>
        <processor type="Sitecore.Commerce.Pipelines.Prices.GetProductPrices.GetProductPrices, Sitecore.Commerce.Connect.Core" />
      </commerce.prices.getProductPrices>

      <!--  GET PRODUCT BULK PRICES
            Gets the prices for the specified list of product ids.
            This pipeline is reponisble for reading pricing data for multiple products in a
            single request to commerce system.
            This pipeline requests product pricing information from the commerce system and
            then converts the output into the proper Commerce format.
      -->
      <commerce.prices.getProductBulkPrices>
        <processor type="Sitecore.Commerce.Pipelines.Prices.GetProductBulkPrices.GetProductBulkPrices, Sitecore.Commerce.Connect.Core" />
      </commerce.prices.getProductBulkPrices>
    
      <!-- GET SUPPORTED CURRENCIES
          Gets the supported currencies for a shop.
      -->
      <commerce.prices.getSupportedCurrencies>
        <processor type="Sitecore.Commerce.Pipelines.Prices.GetSupportedCurrencies.GetSupportedCurrencies, Sitecore.Commerce.Connect.Core" />
      </commerce.prices.getSupportedCurrencies>

      <!-- CURRENCY CHOSEN
          Triggers the currency chosen page event.
      -->
      <commerce.prices.currencyChosen>
        <processor type="Sitecore.Commerce.Pipelines.Prices.TriggerCurrencyChosenPageEvent, Sitecore.Commerce.Connect.Core">
          <Name>Currency Chosen</Name>
        </processor>
      </commerce.prices.currencyChosen>

      <!-- GET ELIGIBLE PROMOTION IDS
          Retrieves a list containing the IDs of the promotions that are available for a product.
      -->
      <commerce.prices.getEligiblePromotionIds>
      </commerce.prices.getEligiblePromotionIds>

      <!-- GET PRODUCT PROMOTION DESCRIPTION
          Retrieves the descriptions of a list of promotions for display on the website.
      -->
      <commerce.prices.getProductPromotionDescription>
      </commerce.prices.getProductPromotionDescription>
    </pipelines>
  </sitecore>
</configuration>