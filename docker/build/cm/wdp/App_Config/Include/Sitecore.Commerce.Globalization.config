<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <!--  Commerce ENTITIES
          Contains all the Globalization entities.
          The configuration can be used to substitute the default entity implementation with extended one.
    -->
    <commerce.Entities>
    </commerce.Entities>

    <!-- GLOBALIZATION SERVICE PROVIDER 
         Defines the object which provides core globalization services.
         Default implementation simply calls corresponding pipelines.
    -->
    <globalizationServiceProvider type="Sitecore.Commerce.Services.Globalization.GlobalizationServiceProvider, Sitecore.Commerce.Connect.Core" singleInstance="true" />

    <pipelines>
      <!--
            CULTURE CHOSEN
      -->
      <commerce.globalization.cultureChosen>
        <processor type="Sitecore.Commerce.Pipelines.Globalization.TriggerCultureChosenPageEvent, Sitecore.Commerce.Connect.Core">
          <Name>Culture Chosen</Name>
          <Text>Culture chosen.</Text>
        </processor>
      </commerce.globalization.cultureChosen>
    </pipelines>
  </sitecore>
</configuration>