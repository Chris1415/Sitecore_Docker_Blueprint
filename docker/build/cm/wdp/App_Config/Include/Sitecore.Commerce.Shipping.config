<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <!--  Commerce ENTITIES
          Contains all the Commerce shipping entities.
          The configuration can be used to substitute the default entity implementation with extended one.
    -->
    <commerce.Entities>
      <ShippingOption type="Sitecore.Commerce.Entities.Shipping.ShippingOption, Sitecore.Commerce.Connect.Core"/>
      <ShippingOptionType type="Sitecore.Commerce.Entities.shipping.ShippingOptionType, Sitecore.Commerce.Connect.Core"/>
      <ShippingMethod type="Sitecore.Commerce.Entities.Shipping.ShippingMethod, Sitecore.Commerce.Connect.Core"/>
      <LineShippingOption type="Sitecore.Commerce.Entities.Shipping.LineShippingOption, Sitecore.Commerce.Connect.Core"/>
    </commerce.Entities>

    <!-- SHIPPING SERVICE PROVIDER 
         Defines the object which provides core shipping services.
         Default implementation simply calls corresponding pipelines.
    -->
    <shippingServiceProvider type="Sitecore.Commerce.Services.Shipping.ShippingServiceProvider, Sitecore.Commerce.Connect.Core" singleInstance="true" />

    <pipelines>

      <commerce.shipping.getShippingOptions>
      </commerce.shipping.getShippingOptions>

      <commerce.shipping.getShippingMethods>
      </commerce.shipping.getShippingMethods>

      <commerce.shipping.getShippingMethod>
      </commerce.shipping.getShippingMethod>

      <commerce.shipping.getPricesForShipments>        
      </commerce.shipping.getPricesForShipments>
    </pipelines>

  </sitecore>
</configuration>