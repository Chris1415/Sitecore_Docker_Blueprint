<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
  <sitecore>
    <!--  Commerce ENTITIES
          Contains all the Commerce loyalty program entities.
          The configuration can be used to substitute the default entity implementation with extended one.
    -->
    <commerce.Entities>
      <SortDirection type="Sitecore.Commerce.Entities.Catalog.SortDirection, Sitecore.Commerce.Connect.Core"/>
    </commerce.Entities>

    <!-- CATALOG SERVICE PROVIDER 
         Defines the object which provides core catalog services.
         Default implementation simply calls corresponding pipelines.
    -->
    <catalogServiceProvider type="Sitecore.Commerce.Services.Catalog.CatalogServiceProvider, Sitecore.Commerce.Connect.Core" singleInstance="true" />

    <pipelines>
      <commerce.catalogs.productSorting>
        <processor type="Sitecore.Commerce.Pipelines.Catalog.TriggerProductSortingPageEvent, Sitecore.Commerce.Connect.Core">
          <Name>Product Sorting</Name>
        </processor>
      </commerce.catalogs.productSorting>

      <commerce.catalogs.facetApplied>
        <processor type="Sitecore.Commerce.Pipelines.Catalog.TriggerFacetAppliedPageEvent, Sitecore.Commerce.Connect.Core">
          <Name>Facet Applied</Name>
        </processor>
      </commerce.catalogs.facetApplied>

      <commerce.catalogs.visitedProductDetailsPage>
        <processor type="Sitecore.Commerce.Pipelines.Catalog.TriggerVisitedProductDetailsPagePageEvent, Sitecore.Commerce.Connect.Core">
          <Name>Visited Product Details Page</Name>
        </processor>
      </commerce.catalogs.visitedProductDetailsPage>

      <commerce.catalogs.visitedCategoryPage>
        <processor type="Sitecore.Commerce.Pipelines.Catalog.TriggerVisitedCategoryPagePageEvent, Sitecore.Commerce.Connect.Core">
          <Name>Visited Category Page</Name>
        </processor>
      </commerce.catalogs.visitedCategoryPage>

      <commerce.catalogs.searchInitiated>
        <processor type="Sitecore.Commerce.Pipelines.Catalog.TriggerSearchPageEvent, Sitecore.Commerce.Connect.Core">
          <Name>Search</Name>
        </processor>
      </commerce.catalogs.searchInitiated>
    </pipelines>
  </sitecore>
</configuration>